<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>com.filter.MainFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>showallgood</servlet-name>
        <servlet-class>com.servlet.ShowAllGoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showallgood</servlet-name>
        <url-pattern>/showallgoods</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>verification</servlet-name>
        <servlet-class>com.servlet.VerificationCountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>verification</servlet-name>
        <url-pattern>/verification</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registerservlet</servlet-name>
        <servlet-class>com.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerservlet</servlet-name>
        <url-pattern>/registerservlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updategoods</servlet-name>
        <servlet-class>com.servlet.GoodUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updategoods</servlet-name>
        <url-pattern>/updategoods</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>goodsloadservlet</servlet-name>
        <servlet-class>com.servlet.GoodsLoadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>goodsloadservlet</servlet-name>
        <url-pattern>/goodsloadservlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addGoodsservlet</servlet-name>
        <servlet-class>com.servlet.AddGoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addGoodsservlet</servlet-name>
        <url-pattern>/addGoodsservlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>goodsdelservlet</servlet-name>
        <servlet-class>com.servlet.GoodsdeleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>goodsdelservlet</servlet-name>
        <url-pattern>/goodsdel</url-pattern>
    </servlet-mapping>






</web-app>